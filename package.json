{
  "name": "global-shortcuts",
  "version": "0.2.1",
  "description": "Chrome extension allows you to run your scripts on any website using keyboard shortcuts when the browser window is minimized",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=development webpack",
    "build:production": "NODE_ENV=production webpack",
    "watch": "NODE_ENV=development webpack --watch",
    "hot": "NODE_ENV=development webpack-dev-server --hot",
    "lint": "npm run lint:js && npm run lint:scss && npm run lint:locales",
    "lint:js": "eslint src -c .eslintrc --ext js,jsx --cache",
    "lint:scss": "stylelint ./src/styles/*.scss !**/normalize.scss --color --formatter verbose --cache",
    "lint:locales": "jsonlint ./src/_locales/**/messages.json --sort-keys --no-duplicate-keys --quiet --in-place"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aironavt/global-shortcuts.git"
  },
  "bugs": {
    "url": "https://github.com/aironavt/global-shortcuts/issues"
  },
  "homepage": "https://github.com/aironavt/global-shortcuts#readme",
  "author": "Evgeniy Vladykin <aironavt@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.10.1",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.10.1",
    "@babel/plugin-proposal-optional-chaining": "7.10.1",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.10.1",
    "@prantlf/jsonlint": "10.2.0",
    "babel-eslint": "11.0.0-beta.2",
    "babel-loader": "8.1.0",
    "babel-plugin-inline-react-svg": "1.1.1",
    "babel-plugin-module-resolver": "4.0.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "camelcase": "6.0.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.0.1",
    "css-loader": "3.5.3",
    "eslint": "7.1.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-standard-preact": "1.1.6",
    "eslint-import-resolver-babel-module": "5.1.2",
    "eslint-import-resolver-webpack": "0.12.1",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.7",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.14.1",
    "sass-loader": "8.0.2",
    "stylelint": "13.5.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.0.0",
    "stylelint-scss": "3.17.2",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "write-file-webpack-plugin": "4.5.1",
    "zip-webpack-plugin": "3.0.0"
  },
  "dependencies": {
    "ace-builds": "1.4.11",
    "classnames": "2.2.6",
    "history": "4.10.1",
    "preact": "10.4.4",
    "preact-router": "3.2.1",
    "prop-types": "15.7.2",
    "react-ace": "9.0.0"
  }
}
